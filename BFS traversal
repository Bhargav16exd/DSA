// Online C++ compiler to run C++ program online
#include <iostream>
#include<queue>
using namespace std;

const int maxx= 7;

class Graph{
    public:
    int vertices;
    int adjMatrix[maxx][maxx];
    public:
    Graph(int value){
        vertices = value;
        for(int i=0;i<7;i++){
            for(int j=0;j<7;j++){
                adjMatrix[i][j]=0;
            }
        }
    }
    
    void addEdge(int u , int v){
        adjMatrix[u][v]=1;
        adjMatrix[v][u]=1;
    }
    
    void bfsTraversal(int startNode){
        int visited[maxx]={false};
        queue<int>ExpQ;
        visited[startNode]=true;
        ExpQ.push(startNode);
        cout<<"node visit will start from"<<startNode<<endl;
        cout<<"BFS Traversal:"<<endl;
        while(!ExpQ.empty()){
            int j = ExpQ.front();
            ExpQ.pop();
            cout<<j<<endl;
            for(int k=0;k<maxx;k++){
                if(adjMatrix[j][k] && !visited[k]){
                    ExpQ.push(k);
                    visited[k]=true;
                }
            }
        }
    }
    
};

int main() {
  
    Graph g(maxx);
    g.addEdge(0,1);
    g.addEdge(0,2);
    g.addEdge(0,3);
    g.addEdge(1,2);
    g.addEdge(2,3);
    g.addEdge(2,4);
    g.addEdge(3,4);
    g.addEdge(4,5);
    g.addEdge(4,6);

    g.bfsTraversal(1);
    return 0;
}
