#include <iostream>
using namespace std;

class node {
    public:
    int data;
    node* next;
    public:
    node(){
        data=0;
        next=NULL;
    }
    node(int reqInfo){
        data = reqInfo;
        next= NULL;
    }
};


class linkedList{
    public:
    node* head;
    node* tail;
    public:
    linkedList(){
        head=NULL;
        tail=NULL;
    }
    void insertNodeAtEnd(int DATA);
    void displayList();
    void updateData(int ,int);
    void insertAtStart(int DATA);
    void insertAfter(int whom , int with);
    void deleteNode(int data);
    
};

void linkedList::insertNodeAtEnd(int DATA){
    node* newNode = new node(DATA); 
    if(head==NULL){
        head=newNode;
        tail=newNode;
        return;
    }
    tail->next = newNode;
    tail=newNode;
}

void linkedList::displayList(){
    node* temp = head;
    while(temp!=NULL){
        cout<<temp->data<<"->"<<endl;
        temp=temp->next;
    }
}

void linkedList::updateData(int dataToBeReplaced ,
                            int dataWhichReplaced){
        node* temp = head;
        int flag;
        while(temp!=NULL)
        {
         if(temp->data == dataWhichReplaced)
         {  
          temp->data = dataToBeReplaced;
          flag = 0;
          cout<<"data replacement success"<<endl;    
          break;
         }else{flag=1;}
         temp=temp->next;
        }
        if(flag==1){
            cout<<"The number which you want to display doesnt exists"<<endl;
        }
    
}

void linkedList::insertAtStart(int DATA){
    node * newNode = new node(DATA);
    newNode->next=head;
    head = newNode;
}

void linkedList::insertAfter(int whom,int with){
    node* temp = head;

        int flag;
        while(temp!=NULL)
        {
         if(temp->data == whom)
         {  
             node* newNode = new node(with);          
             newNode->next=temp->next;
             temp->next = newNode;
             cout<<"Updation Success"<<endl;
             flag=0;
             break;
         }else{flag=1;}
         temp=temp->next;
        }
        if(flag==1){
            cout<<"The number which you want to replace after doesnt exists"<<endl;
        }
}
void linkedList::deleteNode(int data){
    node* temp = head;
    node* trash;

        int flag;
        while(temp!=NULL)
        {
         if(temp->data == data)
         {  
             if(temp==head){
                 trash = head;
                 trash=NULL;
                 head=temp;
             }
             
             flag=0;
             break;
         }else{flag=1;}
         temp=temp->next;
        }
        if(flag==1){
            cout<<"The number which you want to replace after doesnt exists"<<endl;
        }
}
int main() {

    linkedList l;
    l.insertNodeAtEnd(5);
    l.insertNodeAtEnd(7);
    l.insertNodeAtEnd(4);
    l.insertNodeAtEnd(2);
    l.insertAtStart(10);
    l.displayList();
    l.insertAfter(4,17);
    
    l.deleteNode(5);
   // l.updateData(9,10);
    l.displayList();

    return 0;
}
